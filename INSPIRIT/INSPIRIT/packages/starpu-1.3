proc ModulesHelp { }
{
    puts stderr "\t[module-info name] - loads the StarPU 1.3 environment"
    puts stderr "\tThe following environment variables are modified:"
    puts stderr "\t$PATH"
    puts stderr "\t$LD_LIBRARY_PATH"
    puts stderr "\t$LIBRARY_PATH"
    puts stderr "\t$INCLUDE"
    puts stderr "\t$CPATH"
    puts stderr "\t$PKG_CONFIG_PATH"
    puts stderr "\t$MANPATH"
}

set prefix	/usr/local

conflict starpu

module-whatis   "loads the StarPU 1.3 environment"

if {![file exists $prefix]}
{
    puts stderr "\t[module-info name] Load Error: $prefix does not exist"
    break
    exit 1
}

set exec_prefix	${prefix}
set libdir	${exec_prefix}/lib

prepend-path  PATH		${exec_prefix}/bin
prepend-path  LD_LIBRARY_PATH	${exec_prefix}/lib
prepend-path  LIBRARY_PATH	${exec_prefix}/lib
prepend-path  INCLUDE		${prefix}/include/starpu/1.3
prepend-path  CPATH		${prefix}/include/starpu/1.3
prepend-path  PKG_CONFIG_PATH	${exec_prefix}/lib/pkgconfig
prepend-path  MANPATH		${prefix}/share/man
prepend-path  PYTHONPATH	${exec_prefix}/lib/python3.8/site-packages
